<%= form_tag(:controller => "posts", :action => "create", :feed_id => @feed_id) do %>
	<%= label_tag(:title, "Title") %>
	<%= text_field_tag(:title) %>
	<%= label_tag(:body, "Description") %>
	<%= text_field_tag(:body) %>
	<%= submit_tag("Create New Post") %>
<% end %>

<%= render :partial => "feeds/post", :collection => @posts %>

